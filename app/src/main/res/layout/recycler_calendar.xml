<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.wedid.views.calendar.CalendarRecyclerItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_recycler_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/black_100">
        <ImageView
            android:id="@+id/iv_recycler_margin1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/gray_050"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_recycler_margin2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/gray_050"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/iv_recycler_margin1" />

        <TextView
            android:id="@+id/tv_recycler_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="32dp"
            android:fontFamily="@font/montserratmedium"
            android:textColor="@color/black_900"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_recycler_daytext"
            style="@style/Text16Bold"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:text="일"
            android:layout_marginLeft="1dp"
            android:gravity="center"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_recycler_day"
            app:layout_constraintLeft_toRightOf="@id/tv_recycler_day" />

        <TextView
            android:id="@+id/tv_recycler_dayofweek"
            style="@style/Text15Regular"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:text="(월)"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/tv_recycler_daytext"
            app:layout_constraintLeft_toRightOf="@id/tv_recycler_daytext" />

        <TextView
            android:id="@+id/tv_recycler_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.title}"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="4dp"
            android:lineSpacingExtra="7dp"
            style="@style/Text15Regular"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/tv_recycler_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text14Regular"
            android:textColor="@color/black_500"
            app:layout_constraintLeft_toLeftOf="@id/tv_recycler_title"
            app:layout_constraintTop_toBottomOf="@id/tv_recycler_title"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
