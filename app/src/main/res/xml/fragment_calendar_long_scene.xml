<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    >

    <ConstraintSet android:id="@+id/off_screens">
        <Constraint android:id="@id/off_screen_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="1"
            />

        <Constraint android:id="@id/off_screen_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/off_screen_top"
            />

        <Constraint android:id="@id/off_screen_top_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/off_screen_top_bar"
            app:layout_constraintBottom_toBottomOf="@id/off_screen_top"
            />

        <Constraint android:id="@id/off_screen_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="1"
            />

        <Constraint android:id="@id/off_screen_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/off_screen_bottom"
            />

        <Constraint android:id="@id/off_screen_bottom_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/off_screen_bottom"
            app:layout_constraintBottom_toTopOf="@id/off_screen_bottom_bar"
            />
    </ConstraintSet>


    <ConstraintSet android:id="@+id/start"
        app:deriveConstraintsFrom="@id/off_screens">

        <Constraint android:id="@id/top_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alpha="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bar"
            />

        <Constraint android:id="@id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <Constraint android:id="@id/bottom_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alpha="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/off_screen_bottom_content"/>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end" app:deriveConstraintsFrom="@id/off_screens">
        <Constraint android:id="@id/top_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alpha="0"
            app:layout_constraintTop_toTopOf="@id/off_screen_top_content"
            app:layout_constraintBottom_toBottomOf="@id/off_screen_top_content"
            />

        <Constraint android:id="@id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Constraint android:id="@id/bottom_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alpha="1"
            app:layout_constraintTop_toBottomOf="@id/bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Constraint android:id="@+id/vp_calendar_long"
            android:alpha="0"/>
    </ConstraintSet>

    <Transition
        app:constraintSetStart="@+id/end"
        app:constraintSetEnd="@id/start"
        app:duration="400">
    </Transition>
</MotionScene>