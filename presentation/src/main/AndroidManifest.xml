<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gotz.presentation">

    <application
        android:theme="@style/Theme.WGPGkt">

        <activity android:name=".view.login.LoginActivity"
            android:exported="true"/>

        <activity android:name=".view.main.MainActivity"
            android:exported="true"/>

        <activity android:name=".view.onboarding.OnboardingActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize"/>

        <activity android:name=".view.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.terms.TermsActivity"
            android:exported="true"/>

        <activity android:name=".view.tutorial.TutorialActivity"
            android:exported="true"/>

    </application>
</manifest>